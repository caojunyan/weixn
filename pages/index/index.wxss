page{
    height: 100%;
    background: #b3d4db;
}
.container{
    display: flex;
    flex-direction: column;
    align-items: center;
    
}
.user-avatar{
    width: 200rpx;
    height: 200rpx;
    border-radius: 50%;
    margin-top: 160rpx;
}
.user-name{
    font-size: 32rpx;
    font-weight: bold;
    margin-top: 100rpx;
}
.moto{
    font-size: 22rpx;
    font-weight: bold;
    color:#405f80;
    font-family: MicroSoft Yahei;
}
.moto-container{
    margin-top: 200rpx;
    border: 1px solid #405f80;
    width: 200rpx;
    height: 80rpx;
    text-align: center;
    line-height: 80rpx;
    border-radius: 5px;
}